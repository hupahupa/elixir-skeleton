<%- log_dir = node[:skeleton][:log_dir] -%>
<%- site_dir = node[:skeleton][:site_dir] -%>
<%- app_name = node[:skeleton][:app_name] -%>
<%- stat_port = node[:skeleton][:stat_port] -%>
[uwsgi]

socket = /tmp/<%= app_name%>_uwsgi.sock
chmod-socket = 666
logto = <%= log_dir %>/uwsgi.log
chdir = <%= site_dir %>
pidfile = <%= site_dir %>/scripts/uwsgi.pid
module = <%= app_name %>
callable = app
catch-exceptions
offload-threads = 1
processes = 1
threads = 1
gevent = 10
stats = 127.0.0.1:<%= stat_port %>