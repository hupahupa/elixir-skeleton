<%- skeleton = node[:skeleton] -%>
<%- server_names = skeleton[:server_names] -%>
<%- log_dir = skeleton[:log_dir] -%>
<%- server_aliases = skeleton[:server_aliases] -%>
server {

    listen              80;
    server_name         <%= server_names.join(' ') %>;
    access_log          <%= log_dir %>/access.log;
    error_log           <%= log_dir %>/error.log;


    location / {
        try_files $uri @flask;
    }

    # FIX: This is temporary. Designate a directory X as root of
    # publicly available resources (i.e. resource urls relative to
    # root should be the same as file paths relative to X (e.g. if X
    # is "/static", css files are under "/static/css", then css urls
    # should start with "/css" not "/static/css")).
    location /static {
        root <%= node[:skeleton][:site_dir] %>/skeleton;
    }


    location ~ /(\.|Vagrantfile|chef) {
        # Protect code files
        return 444;
    }

    <%- if skeleton[:blocked_keywords] -%>
    location ~* (<%= skeleton[:blocked_keywords].join("|") %>) {
        return 444;
    }
    <%- end -%>

    location @flask {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/<%= node[:skeleton][:app_name]%>_uwsgi.sock;
    }
}
